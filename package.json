{
  "name": "locospec",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "lerna": "lerna",
    "build": "lerna run build --since=HEAD~1",
    "test": "echo \"Error: no test specified\" && exit 1",
    "bp:build": "lerna run build --scope @locospec/blueprint-react",
    "bp:dev": "lerna run build:watch --scope @locospec/blueprint-react",
    "el:build": "lerna run build --scope @locospec/elements-react",
    "el:release": "lerna run publish --scope @locospec/elements-react",
    "site:start": "lerna run start --scope site",
    "site:build": "lerna run build --scope site",
    "site:serve": "lerna run serve --scope site",
    "site:deploy": "lerna run deploy --scope site"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/locospec/ui.git"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "lerna": {
    "version": "independent"
  },
  "keywords": [],
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/locospec/ui/issues"
  },
  "homepage": "https://github.com/locospec/ui#readme",
  "description": "",
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@auto-it/all-contributors": "11.3.0",
    "@auto-it/conventional-commits": "11.3.0",
    "@auto-it/npm": "11.3.0",
    "@auto-it/omit-commits": "^11.3.0",
    "@auto-it/omit-release-notes": "^11.3.0",
    "@auto-it/released": "11.3.0",
    "@chromatic-com/storybook": "^1.3.3",
    "@storybook/addon-essentials": "^8.0.9",
    "@storybook/addon-interactions": "^8.0.9",
    "@storybook/addon-links": "^8.0.9",
    "@storybook/addon-onboarding": "^8.0.9",
    "@storybook/blocks": "^8.0.9",
    "@storybook/react": "^8.0.9",
    "@storybook/react-vite": "^8.0.9",
    "@storybook/test": "^8.0.9",
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.1",
    "ajv": "^8.17.1",
    "auto": "11.3.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.11",
    "glob": "^11.0.0",
    "lerna": "8.1.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^8.0.9",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.6.2",
    "vite": "^6.0.5",
    "vite-plugin-dts": "^4.2.1",
    "vite-plugin-lib-inject-css": "^2.1.1"
  },
  "auto": {
    "baseBranch": "main",
    "plugins": [
      "all-contributors",
      [
        "npm",
        {
          "forcePublish": false
        }
      ],
      [
        "conventional-commits",
        {
          "defaultReleaseType": "patch"
        }
      ],
      "released"
    ],
    "prereleaseBranches": [
      "alpha",
      "beta",
      "next"
    ],
    "onlyPublishWithReleaseLabel": true
  },
  "overrides": {
    "vite": {
      "rollup": "npm:@rollup/wasm-node"
    }
  },
  "optionalDependencies": {
    "@rollup/rollup-darwin-arm64": "^4.30.1",
    "@rollup/rollup-darwin-x64": "^4.30.1",
    "@rollup/rollup-linux-x64-gnu": "^4.30.1",
    "@swc/core-darwin-arm64": "^1.10.7",
    "@swc/core-darwin-x64": "^1.10.7",
    "@swc/core-linux-x64-gnu": "^1.10.7"
  }
}
